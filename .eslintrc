{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "standard"
    ],
    "plugins": [
        "babel",
        "promise",
        "@typescript-eslint"
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "key-spacing": "off",
        "jsx-quotes": [2, "prefer-double"],
        "max-len": [2, 120, 2],
        "comma-dangle": "off",
        "complexity": ["error", { "max": 4 }],
        "semi": "off",
        "@typescript-eslint/semi": ["error"],
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error"]
    }
}
